<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.hag.bucketlst"
      android:versionCode="1"
      android:versionName="1.0">
      
	<uses-permission
		android:name="android.permission.GET_ACCOUNTS"
		>
	</uses-permission>
	<uses-permission
		android:name="android.permission.INTERNET"
		>
	</uses-permission>

    <application 
    	android:icon="@drawable/icon" 
    	android:label="@string/app_name" 
    	android:theme="@style/CustomTheme"
    	android:name=".application.BLApp"
    	>
        <activity android:label="@string/app_name" android:name=".activity.BucketMain"
        	android:configChanges="orientation|keyboardHidden"
        	android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
		<activity android:name=".activity.NTaskEdit" android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="adjustResize|stateHidden">
		</activity>

		<activity android:name=".activity.MyTasks" android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="adjustResize|stateHidden">
		</activity>
		
		<activity android:name=".activity.MyDoneTasks" android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="adjustResize|stateHidden">
		</activity>		

		<activity android:name=".activity.NCategoryView" android:configChanges="orientation|keyboardHidden" 
			android:windowSoftInputMode="adjustResize|stateHidden">
		</activity>		
		
		<activity android:name=".activity.ByBuckets" android:configChanges="orientation|keyboardHidden" 
			android:windowSoftInputMode="adjustResize|stateHidden">
		</activity>	
		
		<activity android:name=".activity.NCollabView" android:configChanges="orientation|keyboardHidden" 
			android:windowSoftInputMode="adjustResize|stateHidden">
		</activity>				
				
		<activity android:name=".activity.FakeUserAdd" android:configChanges="orientation|keyboardHidden" 
			android:windowSoftInputMode="adjustResize|stateHidden">
		</activity>

		<activity android:name=".activity.runOnce" android:configChanges="orientation|keyboardHidden" 
			android:windowSoftInputMode="adjustResize|stateHidden">
		</activity>							
							
    </application>
</manifest>