<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="5.0dip"
	    >
	    
		<ImageButton
			android:id="@+id/catAdd"
			android:background="@drawable/selector_add"
			android:layout_width="55.0dip"
			android:layout_height="41.500004dip"
			android:layout_marginLeft="5.0dip"
			android:layout_marginTop="1.0dip"
			android:scaleType="center"
			>
		</ImageButton>		
		<EditText
			android:id="@+id/catGet"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:hint="Add a bucket"
			>
		</EditText>
		<ImageButton
			android:id="@+id/catSpeakNow"
			android:background="@drawable/selector_speak_now"
			android:layout_width="46.0dip"
			android:layout_height="41.500004dip"
			android:layout_marginTop="1.0dip"
			android:layout_marginRight="5.0dip"
			android:scaleType="center"
			>
		</ImageButton>	
	</LinearLayout>
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    
		<ListView 
		    android:id="@+id/catList"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		/>
		
	</LinearLayout>
</LinearLayout>
